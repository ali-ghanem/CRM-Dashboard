    <header>
        <!-- Navbar -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-light white scrolling-navbar">
            <div class="container-fluid">
                @*
                    <!-- Brand -->
                    <a class="navbar-brand waves-effect" href="https://mdbootstrap.com/docs/jquery/" target="_blank">
                        <strong class="blue-text">MDB</strong>
                    </a>
                *@
                <!-- Collapse -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <!-- Left -->
                    <ul class="navbar-nav mr-auto">
                    </ul>

                    <!-- Right -->
                    <ul class="navbar-nav nav-flex-icons">
                        <li class="nav-item">
                            <a href="#" class="nav-link waves-effect">
                                Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link waves-effect">
                                Language
                            </a>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
        <!-- Navbar -->

        <div class="sidebar-fixed position-fixed">


            <div id="linksList" class="list-group list-group-flush">

                <h1 style="color: #007bff" class="p-4">CRM</h1>

                <a id="linkCustomers" asp-action="Index" asp-controller="Customers" class="list-group-item list-group-item-action waves-effect active">
                    <i style="color: #ffffff" class="fas fa-user mr-3"></i>Customers
                </a>
                <a id="linkCompanies" asp-action="Index" asp-controller="Companies" class="list-group-item list-group-item-action waves-effect">
                    <i style="color: #007bff" class="fas fa-building mr-3"></i>Companies
                </a>
                <a id="linkProjects" asp-action="Index" asp-controller="Projects" class="list-group-item list-group-item-action waves-effect">
                    <i style="color: #007bff" class="fas fa-project-diagram mr-3"></i>Projects
                </a>
                <a id="linkVisits" asp-action="Index" asp-controller="Visits" class="list-group-item list-group-item-action waves-effect">
                    <i style="color: #007bff" class="fas fa-glasses mr-3"></i>Visits
                </a>
                <a id="linkDeals" asp-action="Index" asp-controller="Deals" class="list-group-item list-group-item-action waves-effect">
                    <i style="color: #007bff" class="fas fa-handshake mr-3"></i>Deals
                </a>

            </div>

        </div>
    </header>
    <!--Main layout-->
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid mt-5">



            @RenderBody()

        </div>
    </main>
    <!--Main layout-->
